<p id="notice"><%= notice %></p>

<h1>Listing Accounts</h1>

<table>
  <thead>
    <tr>
      <th>League ign</th>
      <th>League</th>
      <th>Division</th>
      <th>Tier</th>
      <th>Server</th>
      <th>League points</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Is inactive</th>
      <th>Is veteran</th>
      <th>Is fresh blood</th>
      <th>Is hot streak</th>
      <th>Streamer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.league_ign %></td>
        <td><%= account.league_id %></td>
        <td><%= account.division %></td>
        <td><%= account.tier %></td>
        <td><%= account.server %></td>
        <td><%= account.league_points %></td>
        <td><%= account.wins %></td>
        <td><%= account.losses %></td>
        <td><%= account.is_inactive %></td>
        <td><%= account.is_veteran %></td>
        <td><%= account.is_fresh_blood %></td>
        <td><%= account.is_hot_streak %></td>
        <td><%= account.streamer_id %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

