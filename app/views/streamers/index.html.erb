<p id="notice"><%= notice %></p>

<h1>Listing Streamers</h1>

<table>
  <thead>
    <tr>
      <th>Twitch username</th>
      <th>Name</th>
      <th>Server</th>
      <th>Slug</th>
      <th>League ign</th>
      <th>League</th>
      <th>Division</th>
      <th>Tier</th>
      <th>League points</th>
      <th>Current wins</th>
      <th>Current losses</th>
      <th>Is hot streak</th>
      <th>Is veteran</th>
      <th>Is fresh blood</th>
      <th>Is inactive</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @streamers.each do |streamer| %>
      <tr>
        <td><%= streamer.twitch_username %></td>
        <td><%= streamer.name %></td>
        <td><%= streamer.server %></td>
        <td><%= streamer.slug %></td>
        <td><%= streamer.league_ign %></td>
        <td><%= streamer.league_id %></td>
        <td><%= streamer.division %></td>
        <td><%= streamer.tier %></td>
        <td><%= streamer.league_points %></td>
        <td><%= streamer.current_wins %></td>
        <td><%= streamer.current_losses %></td>
        <td><%= streamer.is_hot_streak %></td>
        <td><%= streamer.is_veteran %></td>
        <td><%= streamer.is_fresh_blood %></td>
        <td><%= streamer.is_inactive %></td>
        <td><%= link_to 'Show', streamer %></td>
        <td><%= link_to 'Edit', edit_streamer_path(streamer) %></td>
        <td><%= link_to 'Destroy', streamer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

